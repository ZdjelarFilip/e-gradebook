<Window x:Class="WpfApp1.VnosStudentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Student" Height="300" Width="200">
    <StackPanel Margin="20">
        <Label FontSize="16" HorizontalAlignment="Center" Content="Dodaj študenta"/>
        <Separator/>
        <WrapPanel>
            <Label Content="Ime: "/>
            <TextBox Name="TextBoxIme" Width="150"></TextBox>
            <Label Content="Priimek: "/>
            <TextBox Name="TextBoxPriimek" Width="150"></TextBox>
            <Label Content="Datum rojstva: "/>
            <DatePicker Name="DatePickerDatum" Width="150"></DatePicker>
        </WrapPanel>

        <Button Name="Tipka" Margin="0,10,0,0" BorderThickness="0" Foreground="White" Background="Green" FontSize="14" Content="Dodaj"/>
    </StackPanel>
</Window>
